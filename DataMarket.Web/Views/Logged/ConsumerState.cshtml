@model DataMarket.Web.Models.ConsumerStateViewModel

@{
    ViewBag.Title = "ConsumerState";
}


<link href="~/Content/Datamarts_table.css" rel="stylesheet" type="text/css" />

<h1>
    <i>
        You can select a certain type for your Consumer data
        or you can just choose from our entire Consumer Market
    </i>
</h1>

<section>
    <div id="loading"></div>
    <div class="tbl-header">
        <table cellpadding="0" cellspacing="0" border="0">
            <thead>
                <tr>
                    <th>@Model.Datamart Market</th>
                </tr>
            </thead>
        </table>
    </div>
    <div class="tbl-content1">
        <form>
            <div class="row" style="width:100%">
                <br />
                @foreach (var item in Model.FilterModelObj)
                {
                    <div class="col-sm-4" style="text-align:left">
                        <br />
                        <p>
                            <input type="checkbox" id="@item.FilterValueId" class="checkFilter" value="@item.FilterValueId" >
                            <label for="@item.FilterValueId"> @item.DisplayName</label>      
                                                                      
                            
                        </p>                      
                    </div>
                }
              
            </div>
        </form>
    </div>
    <div class="myBottom-section">
        <table cellpadding="0" cellspacing="0" border="0">
            <thead>
                <tr>
                    <th class="col-md-8" style="text-align:left">
                        <input id="my-button-selectAll" class="my-button" type="button" value="Select All">
                        <br />
                    </th>
                    <th class="col-md-4">
                        <label for="count"> Count: </label>
                        <label id="countValue">0</label>
                    </th>
                </tr>
            </thead>
        </table>
    </div>
</section>

<table>
    <tr>
        <th class="col-md-8" style="text-align:left">
            @Html.ActionLink("go back", "Create")
        </th>
        <th class="col-md-4">
            <button class="my-button" type="button" onclick="location.href='@Url.Action("GetListInProgressItems", "Logged", new { userId = Session["userId"], viewName = "SeeFilters"})'">See Filters</button>
            <button class="my-button" type="button" onclick="location.href='@Url.Action("ConsumerFilters", "Logged",  new { id = int.Parse(Session["datamartId"].ToString()), parent = 1 } )'">Continue</button>
        </th>
    </tr>
</table>

<input type="hidden" id="userId" value="@Session["userId"]">

<script src="/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/Select_Deselect_script.js"></script>
